.text-center
  %h2 Đăng Ký
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .form-group
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, input_html: { class: 'form-control' }
    .form-group
      = f.label :name, "Mật Khẩu"
      - if @minimum_password_length
        %em
          (Phải có ít nhất #{@minimum_password_length} ký tự)
      %br/
      = f.password_field :password, autocomplete: "of", input_html: { class: 'form-control' }
    .form-group
      = f.label :name, "Nhập lại mật khẩu"
      %p
        %em
          (Nhập lại mật khẩu bằng tay, không được copy!)
      = f.password_field :pasword_confirmation, autocomplete: "of", input_html: { class: 'form-control' }
    .actions
      = f.submit "Đăng Ký", class: "btn btn-primary btn-sm"
  %small
    = render "devise/shared/links"
