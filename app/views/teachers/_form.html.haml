= form_for([@school, @teacher]) do |f|
  %p
    = f.label :name, "Tên"
    = f.text_field :first_name
  %p
    = f.label :name, "Họ"
    = f.text_field :last_name
  %p
    = f.label :name, "Tên Đệm"
    = f.text_field :middle_name
  %p
    = f.label :name, "Khoa"
    = f.text_field :department
  %p
    = f.button :submit, class: "btn btn-primary"
